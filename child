<!-- Èü≥Â£∞ -->
<audio id="voice"></audio>
<audio id="okSound" src="ok.mp3"></audio>
<audio id="ngSound" src="ng.mp3"></audio>

<script>
const animals = [
  { name: "„ÅÑ„Å¨", img: "dog.jpg", voice: "dog.mp3" },
  { name: "„Å≠„Åì", img: "cat.jpg", voice: "cat.mp3" },
  { name: "„ÅÜ„Åó", img: "cow.jpg", voice: "cow.mp3" },
  { name: "„Çâ„ÅÑ„Åä„Çì", img: "lion.jpg", voice: "lion.mp3" }
];

let correctAnimal = null;

function shuffle(array) {
  return array.sort(() => Math.random() - 0.5);
}

function speakAnimal(animal) {
  const voice = document.getElementById("voice");
  voice.src = animal.voice;
  voice.play();
}

function nextQuestion() {
  document.getElementById("message").innerText = "";

  const shuffled = shuffle([...animals]);
  correctAnimal = shuffled[0];

  document.getElementById("question").innerText = "„Å©„Çå„Åã„Å™Ôºü";
  speakAnimal(correctAnimal);

  const container = document.getElementById("animals");
  container.innerHTML = "";

  shuffled.forEach(animal => {
    const div = document.createElement("div");
    div.className = "animal";
    div.innerHTML = `<img src="${animal.img}" alt="${animal.name}">`;
    div.onclick = () => checkAnswer(animal);
    container.appendChild(div);
  });
}

function checkAnswer(animal) {
  if (animal.name === correctAnimal.name) {
    document.getElementById("message").innerText = "„Åô„Åî„Éº„ÅÑÔºÅÔºÅüéâ";
    document.getElementById("okSound").play();
  } else {
    document.getElementById("message").innerText = "„ÇÇ„ÅÜ„ÅÑ„Å£„Åã„ÅÑ üòä";
    document.getElementById("ngSound").play();
  }
}

nextQuestion();
</script>

